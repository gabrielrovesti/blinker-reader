{
  "build": {
    "devPath": "../ui/dist",
    "distDir": "../ui/dist"
  },
  "package": {
    "productName": "Blinker Reader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "fs": {
        "scope": ["$APPDATA/*", "$DOCUMENT/*"]
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.blinker.reader",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright (c) 2025 Blinker Team",
      "category": "Productivity",
      "shortDescription": "Blink. Open. Read.",
      "longDescription": "A fast, secure, no-noise document reader designed for privacy and performance.",
      "targets": ["msi", "dmg", "appimage", "deb"]
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'"
    },
    "windows": [
      {
        "title": "Blinker Reader",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  }
}
